{{> nav}}
<div class="container">


  <section id="leave-message" class="container section-bg-color push" data-aos="zoom-in-down">
    <div class="contact u-center-text section-title">//Leave a Message</div>
    <div class="section-content">
      <div class="row">
        <form class="form">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-input" id="name" placeholder="John Doe">
          </div>
          <div class="form-group">
            <label for="message">Message:</label>
            <input type="text" class="form-input" id="message" placeholder="Your message here">
          </div>
          <button class="btn waves-effect submit" type="submit" name="action" id="submit">Submit
            <i class="material-icons right">send</i>
          </button>
        </form>
      </div>
    </div>
  </section>

  <section id="leave-message" class="container section-bg-color push" data-aos="zoom-in-down">
    <div class="contact u-center-text section-title">//Messages</div>
    <div class="section-content" id="entry-log">

    </div>
  </section>
</div>

